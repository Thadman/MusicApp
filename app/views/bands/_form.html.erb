<%= form_with model: @band, local: true do|form| %>

<div class="form-container">
  <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
      <%= form.label :album_title %>
      <%= form.text_field :album_title, class: 'form-control' %>
  </div>

  <div class="form-group">
      <%= form.label :date_started %>
      <%= date_field(:user, :born_on) %>
  </div>
  
  <div class="form-group">
      <%= form.label :picture %> 
      <%= form.file_field :picture, accept: 'image/png,image/gif,image/jpeg,image/jpg' %>
  </div>

  <div class="custom-file">
    <%= form.label :image, class: 'custom-file-label' %>
    <%= form.file_field :image, class: 'custom-file-input', id: 'customFile' %>
  </div>
  
  <div>
    <%= form.submit class: "btn btn-success my-2" %>
  </div>
</div>
<% end %>





